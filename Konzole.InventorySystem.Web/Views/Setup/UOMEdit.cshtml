@model Konzole.InventorySystem.Entities.UOM
@{
    ViewBag.Title = "Category Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="page-wrapper">
        <div class="panel panel-default">
            <div class="panel-heading">
                UOM Edit Details
            </div>
            <div class="panel-body">
                <h4>UOM</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label class="col-lg-4" style="font-weight:normal;">UOM Description:</label>
                 
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                  
                </div>
                <div class="form-group">
                    <label class="col-lg-4" style=" font-weight:normal;">UOM Abbreviation:</label>
                 
                        @Html.EditorFor(model => model.Abbreviation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Abbreviation, "", new { @class = "text-danger" })
                  
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>


