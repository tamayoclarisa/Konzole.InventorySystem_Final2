@model Konzole.InventorySystem.Entities.UOM
@{
    ViewBag.Title = "Unit of Measure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        UOM Details
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4>Unit of Measure</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group">
                                    <label class="col-lg-6" style=" font-weight:normal;">UOM Description:</label>

                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label class="col-lg-6" style="font-weight:normal;">UOM Abbreviation:</label>

                                    @Html.EditorFor(model => model.Abbreviation, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Abbreviation, "", new { @class = "text-danger" })

                                </div>


                                <div class="form-group">
                                    <div class="col-lg-6">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        }




        <div>
            @Html.ActionLink("Back to List", "CategoryList")
        </div>

