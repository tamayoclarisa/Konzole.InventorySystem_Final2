@model Konzole.InventorySystem.Entities.WarehouseLoc
@{
    ViewBag.Title = "Warehouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading">
            Category Details
        </div>
        <div class="panel-body">
            <h4>Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.WarehouseLocId)

            <div class="form-group">
                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Location Address:</label>
                <div class="col-lg-4">
                    @Html.EditorFor(model => model.LocationAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LocationAddress, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>

}




<div>
    @Html.ActionLink("Back to List", "WarehouseLocList")
</div>

