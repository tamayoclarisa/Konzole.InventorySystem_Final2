@model IEnumerable<Konzole.InventorySystem.Entities.UOM>
@{
    ViewBag.Title = "Unit of Measurements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="page-wrapper">

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">


                        @using (Html.BeginForm())
                        {


                            <div class="form-group">
                                <label class="col-lg-1" style="width:110px;">UOM Description</label>
                                @Html.TextBox("UOM", "", new { @class = "form-control col-lg-9", @style = "width:200px;" })
                            </div>

                            <div class="form-group">
                                <input type="submit" class="form-control btn btn-success" style="width:120px;" value="Search" />
                            </div>
                            <div class="form-group">

                                @Html.ActionLink("Create", "CreateUOM", new { controller = "Setup" }, htmlAttributes: new { @class = "btn btn-success" })
                            </div>
                                <span class="loaders reports-load"></span>
                                <table class="table table-striped table-bordered table-hover" id="dataTables-transactionLogs">
                                    <thead>
                                        <tr>
                                            <th>&nbsp; </th>
                                            <th>UOM Name </th>
                                            <th>UOM Abbreaviation </th>

                                        </tr>
                                    </thead>
                                    <tbody id="tblTrans-Body">
                                        @foreach (var row in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.ActionLink("Edit", "UOMEdit", new { id = row.Id }) |
                                                    @Html.ActionLink("Details", "UOMDetails", new { id = row.Id }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = row.Id })
                                                </td>
                                                <td class="center">@row.Description</td>
                                                <td>@row.Abbreviation</td>


                                            </tr>
                                        }
                                    </tbody>
                                </table>
                        }
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
@*@Scripts.Render("~/Content/scripts/custom/transactionLog.js")*@
<script type="text/javascript">

        $('#dataTables-transactionLogs').DataTable({
            responsive: true
        });
</script>
